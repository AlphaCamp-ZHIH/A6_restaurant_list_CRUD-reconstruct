<h1 class="restaurant-show-title ">FAVORITE LIST</h1>
<!-- search bar -->
<div class="container ">
  <div class="row">
    <div class="col-md-10 row justify-content-between mx-auto">
      <form action="/search " class="col-4">
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
      <div class="col-4 dropdown d-flex justify-content-end">
        <button class="btn btn-secondary dropdown-toggle " type="button" id="dropdownMenu2" data-toggle="dropdown"
          aria-haspopup="true" aria-expanded="false">
          {{#if sort}}
          {{sort}}
          {{else}}
          餐廳篩選
          {{/if}}
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
          <a href="/sort/A-Z" class="dropdown-item" type="button">A-Z</a>
          <a href="/sort/Z-A" class="dropdown-item" type="button">Z-A</a>
          <a href="/sort/category" class="dropdown-item" type="button">類別</a>
          <a href="/sort/location" class="dropdown-item" type="button">地區</a>
        </div>
      </div>
    </div>

  </div>

</div>


<!-- restaurant list -->
<div class="container mt-3">
  <div class="row">
    <div class="row col-md-10 col-12 mx-auto">
      {{#each restaurants}}
      <div class="col-md-4 col-12 ">
        <a href="/restaurants/{{this._id}}" class=" text-secondary w-100">
          <div class="card mb-1">
            <img class="card-img-top" src={{this.image}} alt="{{this.image}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i>{{this.category}}
              </div>

              <span class="badge badge-pill badge-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>

            </div>
          </div>
        </a>
        <div class="w-100 row align-items-center justify-content-end no-gutters mb-3">
          <a href="/restaurants/{{this._id}}/edit" class="col-3">edit</a>
          <a href="/restaurants/{{this._id}}" class="col-3">detail</a>
          <form action="/restaurants/{{this._id}}?_method=DELETE" method="POST" class="col-3 p-0">
            <button class="btn btn-primary ">delete</button>
          </form>

        </div>
      </div>
      {{/each}}
    </div>
  </div>
</div>